@inherits Umbraco.Web.Mvc.UmbracoViewPage<HighlyDeveloped.Core.ViewModel.LoginViewModel>
@{
    Html.EnableClientValidation();
    Html.EnableUnobtrusiveJavaScript();

    var myUser = System.Web.Security.Membership.GetUser();
}
<!--Are we alreadu logged in-->
@if (Umbraco.MemberIsLoggedOn())
{
    <!--If yes, show logout-->
    if(myUser != null)
    {
        <p><strong>Logged in as</strong> @myUser.UserName</p>
        <a href="/logout" class="btn btn-danger">Log out</a>
        <i class="fa fa-arrow-right"></i>
    }  
}
else
{
    <!--If not, show the login form-->
    <div class="container">
        <div class="row">
            <div class="col">
                @using (Html.BeginUmbracoForm<HighlyDeveloped.Core.Controllers.ContactController>("HandleLogin"))
                {
                    @Html.AntiForgeryToken();
                    @Html.ValidationSummary();

                    <div class="form-group">
                        @Html.LabelFor(m => m.UserName)
                        @Html.TextBoxFor(m => m.UserName, new
                           {
                                placeholder = "Username"
                           })
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(m => m.Password)
                        @Html.PasswordFor(m => m.Password, new
                           {
                                placeholder = "Password"
                           })
                    </div>

                    <button name="login" type="submit">Login</button>
                }
            </div>
        </div>
        <div class="row">
            <div class="col">
                //todo : forgottern password link
            </div>
        </div>
    </div>
}
