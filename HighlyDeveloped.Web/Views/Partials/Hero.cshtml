@inherits Umbraco.Web.Mvc.UmbracoViewPage
@using ContentModels = Umbraco.Web.PublishedModels;

@{
	Layout = null;
	var heroTitle = Model.Value<string>("heroTitle");
	var heroSubtitle = Model.Value<string>("heroSubtitle");
}
<style>
    .home-hero {
        background: no-repeat center center;
        background-attachment: scroll;
        position: relative;
        background-size: cover;
        color: white;
    }

        .home-hero > .overlay {
            position: absolute;
            top: 0;
            bottom: 0;
            left: 0;
            right: 0;
            background-color: rgba(31,3,103,0.80);
            z-index: 1;
        }

        .home-hero > .inner {
            position: relative;
            z-index: 2;
        }
</style>
<div class="jumbotron jumbotron-fluid home-hero" style="background-image:url()">
    <div class="overlay"></div>
    <div class="inner">
        <div class="container">
            <h1 class="display-4">@heroTitle</h1>
            <p class="lead">@heroSubtitle</p>
        </div>
    </div>
</div>