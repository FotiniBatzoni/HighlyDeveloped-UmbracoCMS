@inherits Umbraco.Web.Mvc.UmbracoViewPage<ContentModels.ContentPage>
@using ContentModels = Umbraco.Web.PublishedModels;
@{
	Layout = "Main.cshtml";
	var heroOverlayColour = Model.Value<string>("heroOverlayColour");
}

@if(!string.IsNullOrEmpty(heroOverlayColour))
{
    <style>
        .home-hero > .overlay 
        {
            background-color: #@heroOverlayColour;
            opacity: 0.5;
        }
    </style>
    
}
@Html.Partial("Hero")

<div class="container">
    <div class="row">
        <div class="col">

            @if(Model.HasValue("pageContent"))
            {
                @Model.Value("pageContent")
            }
        </div>
    </div>
</div>
